#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement" << endl; // if , else ,else if
	
	cout << "please input one of these char ( + , - , * )" << endl;
	char a ; 

	cin >> a; 
// يتم اهمال باقي حالات الشروط اذا تحقق شرط واحده 
	 if (  a    ==   '+'   ) 
		cout << "your number is  " << 2 + 2 << endl;
	else if (a == '-')
		cout << "your number is  " << 2 - 2 << endl;
	else if (a == '*')
		cout << "your number is  " << 2 * 2 << endl;

	else 
		cout << "bad input" << endl;
	
	system("pause");	
}

