#include<iostream>
using namespace std;
void rec(int a);
void main(){
	cout << "Function Recursive " << endl;
	rec(1);
	system("pause");
}

void rec(int a){
	cout << "a is " << a << endl;
	if (a < 3)
		rec(a + 1);
	cout << "after end " << a << endl;

}


