#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement" << endl; // Relational Operators < , > , <= , >= , == , != 
	cout << "please input a number" << endl;
	int  a ; 
	cin >> a;  
	if (a != 50) //يتحقق الشرط اذا كانت قيمة المتغير لا تساوي 50 قط بمعني اي رقم ماعدا رقم
		cout << "your numper is " << a << endl;
	else 
		cout << "bad input" << endl;
	
	system("pause");	
}

// (a < 50) يتحقق الشرط اذا كانت قيمه المتغير تحتوي علي ارقام من 1الي 49عندها يتحقق الشرط
// (a > 50) يتحقق الشرط اذا كانت قيمة المتغير تحتوي علي اي رقم اكبر من 50 مثل 51 عندها يتحقق الشرط

// (a <= 50) يتحقق الشرط اذا كانت قيمة المتغير تحتوي علي ارقام من 1الي 50عندها يتحقق الشرط
// (a >= 50) يتحقق الشرط اذا كانت قيمة المتغير تحتوي علي اي رقم اكبر من 50 او تساوي 50 عندها يتحقق الشرط

// (a == 50) يتحقق الشرط اذا كانت قيمة المتغير اذا كانت تساوي القيمة المقابله لها
// (a != 50)يتحقق الشرط اذا كانت قيمة المتغير لا تساوي 50 قط بمعني اي رقم ماعدا رقم 50
