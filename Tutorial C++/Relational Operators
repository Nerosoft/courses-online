#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement" << endl; // Relational Operators < , > , <= , >= , == , != 
	cout << "Please enter a number" << endl;
	int a;
	cin >> a; 

	if (a == 50){ //اذ كانت قيمه المتغير تساوي 50 يتحقق الشرط وينفذ ما بداخل الاقواس

		cout << "Your number is " << a << endl;
	}

 // (a < 50) ---> يتحقق الشرط اذ كانت قيمة المتغير اصغر من 50 وليست تساوي 50

// (a < 50) ---> يتحقق الشرط اذ كانت قيمة المتغير اكبر من 50 وليست تساوي 50

// (a <= 50) ---> يتحقق الشرط اذ كانت قيمة المتغير اصغر من 50 وايضا اذا كانت تساوي 50

// (a <= 50) ---> يتحقق الشرط اذ كانت قيمة المتغير اكبر من 50 وايضا اذا كانت تساوي 50

// (a != 50)يتحقق الشرط اذا كانت قيمة المتغير لا تساوي 50 قط بمعني اي رقم ماعدا رقم 50


	system("pause");
}
