#include<iostream>
using namespace std;


void main(){
	cout << "Array" << endl;

	char a[3] = {'a' , 'b','c'};

	for (int index = 0; index < 3; index++)

		if (a[index]=='\0')
	     cout << "index " << index << " = " <<"null"<< endl;
		else
		cout << "index " << index << " = " << a[index] << endl;
	
	
	
	  system("pause");
}
