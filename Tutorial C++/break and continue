#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement for loop" << endl;
	
	for (int i = 0;  i < 5; i++){

		if (i == 3)
			break; // يتم كسر الفورلوب 
		
		//continue --> يتم اهمال باقي الاوامر والذهاب الي منطقة العداد 

		cout << "hello" << endl;
	}


	system("pause");
}
