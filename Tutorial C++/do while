#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement do while loop" << endl;
	 char i;
	do{
	
		cout << "hello do while" << endl;

		cout << "Do you want to try again press y " << endl;
		cin >> i;

	} while (i == 'y'); // منطقه الشرط اي اذا تحقق الشرط يتم دخول الدالة وتنفيذ ما تحتوي الاقواس 



	system("pause");
}
