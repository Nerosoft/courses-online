#include<iostream>
using namespace std;
void main(){
	cout << "Control Statement for loop" << endl;
	
	for (/*(1)*/ int i = 0; /*(2)*/ i < 5; /*(3)*/ i++){

		/*(4)*/
		cout << "hello" << endl;
	}

	// 1 --> منطقه التعريف مثلا تعريف متغير 

	// 2 --> منطقه الشرط اي اذا تحقق الشرط يتم تنفيذ ماتحتوي الاقواس

	// 3 --> منطقه العداد اي يتم زيادة قيمة المتغير برقم 1 حتي يحدث تغير في الشرط

	// 4 --> منطقة الكود

	system("pause");
}
